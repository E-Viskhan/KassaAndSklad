@model Uchet.Models.Shop
@{
    ViewData["Title"] = "Создать магазин";
    Layout = "~/Views/OwnerPanel/_OwnerPanelLayout.cshtml";
}

<h1>Создать магазин</h1>
<div class="row">
    <div class="col-4">
        <form asp-action="CreateShop" asp-controller="OwnerPanel">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название магазина</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание магазина</label>
                <input type="text" asp-for="Description" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Создать магазин" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
